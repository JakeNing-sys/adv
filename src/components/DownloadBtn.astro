---
interface Props {
	downloadBtnText: string
	downloadBtnBg?: string
	downloadBtnColor?: string
	downloadIcon?: string
}

const { downloadBtnText, downloadBtnBg = '#0f0f0f', downloadBtnColor = '#ffffff', downloadIcon } = Astro.props
---

<div class="download-btn" style={{ backgroundColor: downloadBtnBg, color: downloadBtnColor }}>
	{downloadBtnText}
	{downloadIcon && <img class="icon" src={downloadIcon} width={'36px'} height={'36px'} alt="" />}
</div>

<style>
	.download-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 247px;
		height: 61px;
		box-shadow: 0px 10px 20px 0px rgba(0, 0, 0, 0.2);
		border-radius: 606px 606px 606px 606px;
		font-family:
			Source Han Sans,
			Source Han Sans;
		font-weight: 500;
		font-size: 16px;
		cursor: pointer;
	}

	.icon {
		margin-left: 8px;
	}
</style>
